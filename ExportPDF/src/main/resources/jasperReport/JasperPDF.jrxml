    <pageFooter>
        <band height="25" splitType="Stretch">
            <textField evaluationTime="Report">
                <reportElement x="757" y="3" width="40" height="20"/>
                <textFieldExpression><![CDATA["Page " + $V{PAGE_NUMBER}]]></textFieldExpression>
            </textField>
            <textField>
                <reportElement x="2" y="3" width="200" height="20"/>
                <textFieldExpression><![CDATA[new java.util.Date()]]></textFieldExpression>
            </textField>
        </band>
    </pageFooter>

    <summary>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="842" height="20"/>
                <text><![CDATA[End of GoodGuys Report]]></text>
            </staticText>
        </band>
    </summary>

</jasperReport>