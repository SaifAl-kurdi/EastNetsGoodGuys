            </textField>

            <subreport>
                <reportElement x="0" y="50" width="800" height="100"/>
                <dataSourceExpression><![CDATA[new net.sf.jasperreports.engine.data.JRBeanCollectionDataSource($F{acceptedMatches})]]></dataSourceExpression>
                <subreportExpression><![CDATA[$P{REPORT_DIR} + "acceptedMatchesSubreport.jasper"]]></subreportExpression>
            </subreport>
        </band>
    </detail>

    <columnFooter>
        <band height="20">
            <staticText>
                <reportElement x="0" y="0" width="842" height="20"/>
                <text><![CDATA[This is the column footer.]]></text>
